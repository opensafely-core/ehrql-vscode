{
  "name": "ehrql-vscode",
  "displayName": "ehrQL",
  "description": "Display ehrQL dataset definitions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onLanguage:python"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ehrql-vscode.display",
        "title": "ehrQL: Display dataset"
      }
    ],
    "configuration": {
      "title": "ehrQL",
      "properties": {
        "ehrql-vscode.DummyTablesDir": {
          "type": "string",
          "default": "dummy_tables",
          "description": "path to dummy tables directory in the workspace folder"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
